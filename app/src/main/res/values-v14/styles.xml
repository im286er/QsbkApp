<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Light</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Light</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Light</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_light</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Light</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonBar.Light</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Light</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Light</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left_padding</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background_light
        </item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_light</item>
        <item name="xlistview_header_arrow">@style/day_header_arrow</item>
    </style>

    <style name="ActionOverflowButtonBar.Light" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/actionbar_over_flow_menu</item>
    </style>

    <style name="ActionBar.Solid.Light" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:progressBarStyle">@style/ProgressBar.Light</item>
        <item name="android:background">@color/ic_action_bar_item_normal</item>
        <item name="android:titleTextStyle">@style/TextView.Title.Light</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress.Small</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_light</item>
    </style>

    <style name="ActionBar.Transparent.Light" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:progressBarStyle">@style/ProgressBar.Light</item>
        <item name="android:background">@drawable/ab_transparent_light</item>
    </style>

    <style name="TextView.Title.Light" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/g_txt_big</item>
        <item name="android:textColor">@color/g_txt_big</item>
    </style>

    <style name="Theme.Light.Widget" parent="@style/Theme.AppCompat">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Light</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Light</item>
    </style>
</resources>
