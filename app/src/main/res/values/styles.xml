<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />

    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme_Start" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_Start_Promote" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash_bg_promote</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Day" parent="@style/Theme.Light">
        <item name="main_bg">@style/day_main_background</item>
        <item name="setting_bg">@color/white</item>
        <item name="psts">@style/day_psts</item>
        <item name="flowBottomBg">@color/ic_action_bar_item_normal_alpha</item>
        <item name="flowBottomDivider">@color/bottom_bar_divider_day</item>
        <item name="flowBottomBgSelector">@drawable/profile_bottom_btn_selector</item>
        <item name="flowBottomMsg">@drawable/ic_message_select</item>
        <item name="flowBottomTextColor">@color/g_txt_big</item>
        <item name="flowBottomReport">@drawable/ic_report</item>
        <item name="iconQiushiListBottomBar">@style/day_iconQiushiListBottomBar</item>
        <item name="article_item_bg">@style/day_article_item_bg</item>
        <item name="listitem_usericon">@style/day_listitem_usericon</item>
        <item name="listitem_username">@style/day_listitem_username</item>
        <item name="listitem_content">@style/day_listitem_content</item>
        <item name="listitem_footer">#ffcccccc</item>
        <item name="listitem_comment">@style/day_listitem_comment</item>
        <item name="article_support">@style/day_article_support</item>
        <item name="article_unsupport">@style/day_article_unsupport</item>
        <item name="article_comment">@style/day_article_comment</item>
        <item name="article_more">@style/day_article_more</item>
        <!--<item name="listitem_bg">@style/day_listitem_bg</item>-->
        <item name="imageMask">@style/day_imageMask</item>
    </style>

    <style name="day_article_support">
        <item name="android:src">@drawable/operation_support_src_selector</item>
    </style>

    <style name="day_article_unsupport">
        <item name="android:src">@drawable/operation_unsupport_src_selector</item>
    </style>

    <style name="day_article_comment">
        <item name="android:src">@drawable/operation_comments</item>
    </style>

    <style name="day_article_more">
        <item name="android:src">@drawable/operation_more</item>
    </style>

    <style name="day_imageMask">
        <item name="android:src">@color/transparent</item>
    </style>

    <style name="day_article_item_bg">
        <item name="android:background">@drawable/items_card</item>
    </style>

    <style name="day_listitem_bg">
        <item name="android:background">@drawable/listview_item_background</item>
    </style>

    <style name="day_listitem_content">
        <item name="android:textSize">@dimen/content</item>
        <item name="android:textColor">@color/content</item>
        <item name="android:lineSpacingExtra">1.5dip</item>
    </style>

    <style name="day_listitem_comment">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff969696</item>
    </style>

    <style name="day_listitem_username">
        <item name="android:textSize">@dimen/user_name</item>
        <item name="android:textColor">#ff3b3d42</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxWidth">248.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="day_iconQiushiListBottomBar">
        <item name="icon1">@drawable/submit</item>
        <item name="icon2">@drawable/examine</item>
    </style>

    <style name="Setting" parent="@style/Day">
        <item name="setting_divide_line">@style/day_setting_divide_line</item>
        <item name="setting_head">@style/day_setting_head</item>
        <item name="setting_item">@style/day_setting_item</item>
        <item name="setting_sub_item">@style/day_setting_sub_item</item>
        <item name="setting_sub_divide_line">@style/day_setting_sub_divide_line</item>
    </style>

    <style name="setting_txt_padding">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
    </style>

    <style name="day_psts">
        <item name="android:textColor">@color/g_txt_middle</item>
        <item name="android:background">@color/psts_bg</item>
        <item name="pstsIndicatorColor">@color/psts_bg_tab_selected</item>
    </style>

    <style name="day_setting_item" parent="@style/setting_txt_padding">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:layout_marginTop">5.0dip</item>
    </style>

    <style name="day_setting_head" parent="@style/setting_txt_padding">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="day_setting_sub_item" parent="@style/setting_txt_padding">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff969696</item>
    </style>

    <style name="day_setting_divide_line">
        <item name="android:background">#ffcccccc</item>
    </style>

    <style name="day_setting_sub_divide_line">
        <item name="android:background">#ffcccccc</item>
    </style>

    <style name="day_main_background">
        <item name="android:background">@color/main_bg</item>
    </style>

    <style name="shareActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/tran_in_out</item>
        <item name="android:activityCloseExitAnimation">@anim/disappear</item>
    </style>

    <style name="AppTheme.share" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/shareActivity</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="AppTheme.share.new" parent="@style/AppTheme.share">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="shareTextItem">@style/ShareTextItemStyle</item>
    </style>

    <style name="ShareTextItemStyle">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:background">@drawable/light_item</item>
    </style>

    <style name="Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Light</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonBar.Light</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Light</item>
        <item name="actionBarItemBackground">@drawable/actionbar_item_background_light</item>
        <!--
        <item name="homeAsUpIndicator">@drawable/ic_arrow_left_padding</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Light</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Light</item>
        <item name="actionModeBackground">@drawable/cab_background_top_light</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_light</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Light</item>
        <item name="popupMenuStyle">@style/PopupMenu.Light</item>
        <item name="xlistview_header_arrow">@style/day_header_arrow</item>
        -->
    </style>

    <style name="day_header_arrow">
        <item name="android:src">@drawable/xlistview_arrow</item>
    </style>

    <style name="day_listitem_usericon">
        <item name="android:src">@drawable/default_users_avatar</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ActionOverflowButtonBar.Light" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/actionbar_over_flow_menu</item>
    </style>

    <style name="ActionBar.Solid.Light" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextView.Title.Light</item>
        <item name="background">@color/ic_action_bar_item_normal</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_light</item>
        <!--    <item name="backgroundSplit">@drawable/ab_bottom_solid_meizu</item> -->
        <item name="progressBarStyle">@style/ProgressBar.Light</item>
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress.Small</item>
    </style>

    <style name="PopupMenu.Light" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_light</item>
    </style>

    <style name="DropDownListView.Light" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_light</item>
    </style>

    <style name="ActionBarTabStyle.Light" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_light</item>
    </style>

    <style name="DropDownNav.Light" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_light</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_light</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_light</item>
    </style>

    <style name="TextView.Title.Light" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textSize">@dimen/g_txt_big</item>
        <item name="android:textColor">@color/g_txt_big</item>
    </style>

    <style name="ActionButton.CloseMode.Light" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_light</item>
    </style>

    <style name="IndeterminateProgress.Small" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:maxWidth">@dimen/ab_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/ab_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/ab_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/ab_progress_bar_size_small</item>
    </style>

    <style name="ProgressBar.Light" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_light</item>
    </style>

</resources>
