<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="65"
    android:versionName="3.0.5"
    android:installLocation="internalOnly"
    package="com.leigo.qsbk.app">

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".QsbkApp">
        <activity
            android:theme="@style/Theme_Start_Promote"
            android:name=".activity.group.SplashGroup"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/Setting"
            android:icon="@drawable/ic_ab_logo_padding"
            android:name=".activity.ActionBarUserSettingNavi"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:logo="@drawable/ic_ab_logo_padding" />
        <activity
            android:theme="@style/Day"
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:theme="@style/AppTheme.share.new"
            android:name=".activity.GuideActivity"
            android:screenOrientation="portrait" />

        <activity
            android:theme="@style/Theme.Light"
            android:icon="@drawable/ic_ab_logo_padding"
            android:name=".activity.About"
            android:screenOrientation="portrait"
            android:logo="@drawable/ic_ab_logo_padding" />
    </application>

</manifest>
